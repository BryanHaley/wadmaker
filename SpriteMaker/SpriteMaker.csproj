<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RuntimeIdentifiers>
      win-x64;
      win-x86;
      osx-x64;
      osx-arm64;
      linux-x64
    </RuntimeIdentifiers>
    <UseAppHost>true</UseAppHost>
    <SelfContained>true</SelfContained>
    <PublishSingleFile>true</PublishSingleFile>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <StartupObject>SpriteMaker.Program</StartupObject>
    <AssemblyVersion>1.4</AssemblyVersion>
    <FileVersion>1.4</FileVersion>
    <Version>1.4</Version>
    <Title>SpriteMaker</Title>
    <Authors>Pieter Witvoet</Authors>
    <Company></Company>
    <Product>SpriteMaker</Product>
    <Description>A command-line tool for creating Half-Life sprites.</Description>
    <Copyright>Copyright © Pieter Witvoet 2021</Copyright>
    <IncludeSourceRevisionInInformationalVersion>false</IncludeSourceRevisionInInformationalVersion>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Shared\Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

</Project>
